#!/usr/bin/sh

/usr/lib/polkit-kde-authentication-agent-1 &
/usr/lib/pam_kwallet_init &
balooctl6 enable &
nm-applet &
dunst &
picom &
killall sxhkd; sxhkd &
~/.config/polybar/launch.sh &

# System XDG Autostart
# abrt-applet --gapplication-service &
# echo "2908" | sudo -S nvidia-smi -pl 120 &
# echo "2908" | sudo -S nvidia-settings -a "GPUGraphicsClockOffsetAllPerformanceLevels=180" &

# User XDG Autostart
# easyeffects --gapplication-service &
# openrgb --profile "Catppuccin Peach" &

feh --bg-fill "$HOME/Pictures/Wallpapers/yourwallpaperhere.png"
xsetroot -cursor_name left_ptr
setxkbmap -option caps:escape

bspc monitor -d 1 2 3 4 5 6 7 8 9

bspc config border_width         4
bspc config window_gap           8
bspc config top_padding          58

bspc config split_ratio          0.50
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc config normal_border_color  "#2E3440"
bspc config focused_border_color "#88C0D0"

bspc rule -a mplayer2 state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off
bspc rule -a feh state=floating
